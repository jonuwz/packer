{
  "variables": {
    "iso_url": "/srv/iso/SLES-11-SP2-DVD-x86_64-GM-DVD1.iso",
    "iso_checksum": "461d82ae6e15062b0807c1338f040497",
    "name": "sles-11.2-64"
  },
  "builders": [
    {
      "vm_name": "{{ user `name` }}",
      "type": "vmware-iso",
      "guest_os_type": "sles11-64",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "tools_upload_flavor": "linux",
      "headless": false,
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp",
        " install=cd:/",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst.xml",
        " textmode=1",
        "<enter>"
      ],
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
      "disk_size": 4096,
      "disk_type_id": 0,
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "vm_name": "{{ user `name` }}",
      "type": "virtualbox-iso",
      "guest_os_type": "OpenSUSE_64",
      "http_directory": "http",
      "iso_url":  "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "guest_additions_url": "/usr/share/virtualbox/VBoxGuestAdditions.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "headless": false,
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp",
        " install=cd:/",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst.xml",
        " textmode=1",
        "<enter>"
      ],
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
      "disk_size": 8192,
      "format": "ova",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    },
    {
      "vm_name": "{{ user `name` }}",
      "type": "qemu",
      "accelerator": "kvm",
      "http_directory": "http",
      "iso_url":  "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp",
        " install=cd:/",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst_qemu.xml",
        " textmode=1",
        "<enter>"
      ],
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
      "disk_size": 1024,
      "format": "qcow2",
      "qemuargs": [
        [ "-m", "1024m" ]
      ]
    }
  ],
  "provisioners": [{
    "type": "file",
    "source": "files",
    "destination": "/tmp"
  },
  { "type": "shell",
    "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
    "scripts": [
      "script/base.sh",
      "script/vagrant.sh",
      "script/vmtools.sh",
      "script/growpart.sh",
      "script/zero.sh"
    ]
  }],
  "post-processors": [{
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "../../{{.Provider}}/{{ user `name` }}.box",
      "only": ["virtualbox-iso","vmware-iso"]
    }]
}
